doctype html
html
 head
  title #{title}
  link(rel='stylesheet', href='/stylesheets/style.css')
 body
  header
   include navBar.pug
  body
   h1 #{title}
   form(action='/blog-edit/' + blog._id, method='post', role="form")
    div.form-group
     .form-group.row
        label(for='blogTitle') Blog Title:
        input#blogTitle.form-control(type='text', placeholder=blog.blogTitle name='blogTitle')
     .form-group.row
        label(for='blogText') Blog Text:
        textarea#blogText.form-control(type='text', placeholder=blog.blogText name='blogText')
     button.btn.btn-primary(type='submit' role='submit') Save Blog
  
